<script type="text/javascript">
    var plat = jQuery.query.get("plat");
    var opts = {
        getListUrl: '@Url.Action("GetPartInformationPageList", "Part")',
        footUrl: '@Url.Content("~/Content/tmpl/foot1.htm")',
